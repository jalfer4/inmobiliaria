@model IEnumerable<inmobiliariaMVC.Models.Pago>

@{
    ViewData["Title"] = "Index";
}

<h3 class="text-center mt-4">Lista de pagos</h3>

<p>

    <a asp-action="Create" class="btn btn-success">Nuevo pago</a>
</p>

<table class="table">
    <caption>Listado Actualizado...</caption>
    <thead>
        <tr>
            <th scope="col">
                @Html.DisplayNameFor(model => model.Inquilino)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.FechaAlta)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.Monto)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td scope="col">
                    @Html.DisplayFor(modelItem => item.Inquilino.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FechaAlta)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Monto)
                </td>
                <td>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Borrar</a>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-success">Editar</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary">Ver</a>
                </td>
            </tr>
        }
    </tbody>
</table>
