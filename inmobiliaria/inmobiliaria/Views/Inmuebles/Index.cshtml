@model IEnumerable<inmobiliariaMVC.Models.Inmueble>

@{
    ViewData["Title"] = "Index";
}

<h3 class="text-center mt-4">Lista de inmuebles</h3>

<p>

    <a asp-action="Create" class="btn btn-success">Nuevo inmueble</a>
</p>

<table class="table">
    <caption>Listado Actualizado...</caption>
    <thead>
        <tr>
            <th scope="col">
                @Html.DisplayNameFor(model => model.Propietario)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.Direccion)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.Ambientes)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.Precio)
            </th>
                       
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td scope="col">
                    @Html.DisplayFor(modelItem => item.Propietario.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Direccion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Ambientes)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Precio)
                </td>
              
                <td>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Borrar</a>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-success">Editar</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary">Ver</a>
                </td>
            </tr>
        }
    </tbody>
</table>
